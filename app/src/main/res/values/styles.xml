<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/white</item>
    </style>

    <style name="StyledTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeErrorColor">@color/flamingo</item>
        <item name="hintTextColor">@color/black</item>
        <item name="errorTextColor">@color/flamingo</item>
    </style>

    <style name="StyledTextInputEditText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

</resources>

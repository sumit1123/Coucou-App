<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/white</item>
    </style>

    <style name="StyledTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeErrorColor">@color/flamingo</item>
        <item name="hintTextColor">@color/black</item>
        <item name="errorTextColor">@color/flamingo</item>
    </style>

    <style name="StyledTextInputEditText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintTransactionHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_snow_gray"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvPaymentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contribution"
                android:textColor="@color/primary"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPaymentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hk_1_300_00"
                android:textColor="@color/primary"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPaymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/payment_mode"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentName" />

            <TextView
                android:id="@+id/tvPaymentModeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HSBC"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentMode" />

            <TextView
                android:id="@+id/tvPaymentWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/bank_account"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/tvPaymentMode"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentName" />

            <TextView
                android:id="@+id/tvPaymentWithValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*********1234"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvPaymentWith"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentWith" />

            <TextView
                android:id="@+id/tvPaymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/date"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/tvPaymentWith"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentName" />

            <TextView
                android:id="@+id/tvPaymentDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_12_01_2022"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvPaymentDate"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>